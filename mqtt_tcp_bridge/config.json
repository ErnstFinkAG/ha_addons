{
  "name": "MQTT TCP Bridge",
  "version": "1.0.3",
  "slug": "mqtt_tcp_bridge",
  "description": "Control TCP devices with Home Assistant via MQTT.",
  "arch": ["amd64", "aarch64", "armv7"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "options": {
    "mqtt_host": "localhost",
    "mqtt_port": 1883,
    "mqtt_user": "homeassistant",
    "mqtt_pass": "your_password",
    "devices_json": "[{\"name\": \"projector1\", \"ip_address\": \"10.60.12.11\", \"port\": 7142, \"commands\": {\"on\": \"POWER ON\", \"off\": \"POWER OFF\", \"status\": \"POWER ?\"}}]"
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_pass": "str",
    "devices_json": "str"
  }
}
